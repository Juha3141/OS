MAKE = make
BASH = bash -c
QEMU = qemu-system-x86_64
VBOXMANAGE = "C:/Program Files/Oracle/VirtualBox/VBoxManage.exe"

OSCDIMG = Oscdimg/oscdimg.exe
ISOFOLDER = iso
TEMPORARYFOLDER = Temporary

TARGET = OS.iso 

clean:
	make clean

all:
	$(BASH) make windows
	$(OSCDIMG) -b$(TEMPORARYFOLDER)/BootLoader.bin $(ISOFOLDER)/ $(TARGET) -m

run: virtualbox

qemurun:
	$(QEMU) -cdrom $(TARGET) -m 8192 -rtc base=localtime -M pc -boot d 

virtualbox:
	$(VBOXMANAGE) startvm "OS" -E VBOX_GUI_DBG_AUTO_SHOW=true -E VBOX_GUI_DBG_ENABLED=truesw
